@{ 
    var m = ViewBag.Message as Tuple<bool, string>;
}
<nav class="breadcrumb-nav">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="demo1.html"><i class="d-icon-home"></i></a></li>
            <li>Contact Us</li>
        </ul>
    </div>
</nav>
<div class="page-header" style="background-image: url(images/page-header/contact-us.jpg)">
    <h1 class="page-title font-weight-bold text-capitalize ls-l">Contact Us</h1>
</div>

    <section class="contact-section">
        <div class="container">
            <div class="row">
                <div class="col-8 offset-2">
                    @if (m.Item1)
                    {
                    <div alert alert-danger text-white>
                        @m.Item1
                    </div>
                    }
                    else
                    {
                    <div alert alert-success text-white>
                         @m.Item2
                    </div>
                    }
                   
                </div>
            </div>
        </div>
    </section>
